<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Profile_Fragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="240dp"
               android:orientation="vertical"
               android:background="@drawable/backcolors">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1">

                       <ImageView
                           android:id="@+id/prodile_settings_id"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:src="@drawable/ic_settings_black_24dp"
                           android:layout_marginTop="10dp"
                           android:layout_marginLeft="10dp"/>
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="right">

                       <ImageView
                           android:id="@+id/profile_crown_id"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:src="@drawable/crownn"
                           android:layout_marginRight="10dp"
                           android:layout_marginTop="10dp"
                           android:visibility="invisible"/>
                   </LinearLayout>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:gravity="center"
                   android:layout_gravity="center">
                   <TextView
                       android:id="@+id/profile_welcome_id"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Welcome "
                       android:textSize="40sp"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="20dp"/>

               </LinearLayout>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="40dp"
               android:layout_marginRight="40dp">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Name"
                       android:textStyle="bold"
                       android:textSize="25dp"
                       android:textColor="@color/twoblue"/>
                   <TextView
                       android:id="@+id/profile_name_id"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text=""
                       android:textSize="20dp"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginTop="10dp">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Email"
                       android:textStyle="bold"
                       android:textSize="25dp"
                       android:textColor="@color/twoblue"/>
                   <TextView
                       android:id="@+id/profile_email_id"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text=""
                       android:textSize="20dp"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginTop="10dp">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="City"
                       android:textStyle="bold"
                       android:textSize="25dp"
                       android:textColor="@color/twoblue"/>
                   <TextView
                       android:id="@+id/profile_city_id"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text=""
                       android:textSize="20dp"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginTop="10dp">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="School"
                       android:textStyle="bold"
                       android:textSize="25dp"
                       android:textColor="@color/twoblue"/>
                   <TextView
                       android:id="@+id/profile_school_id"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text=""
                       android:textSize="20dp"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginTop="10dp">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Role"
                       android:textStyle="bold"
                       android:textSize="25dp"
                       android:textColor="@color/twoblue"/>
                   <TextView
                       android:id="@+id/profile_role_id"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text=""
                       android:textSize="20dp"/>
               </LinearLayout>

           </LinearLayout>



       </LinearLayout>
   </ScrollView>




</FrameLayout>